<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:stretchColumns="2" >

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="4dp"
            android:text="@string/text_colour_prompt" />

        <Spinner
            android:id="@+id/text_colour_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:prompt="@string/text_colour_prompt" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="4dp"
            android:text="@string/background_colour_prompt" />

        <Spinner
            android:id="@+id/background_colour_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:prompt="@string/background_colour_prompt" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="4dp"
            android:text="@string/text_size_prompt" />

        <Spinner
            android:id="@+id/text_size_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:prompt="@string/text_size_prompt" />
    </TableRow>

</TableLayout>